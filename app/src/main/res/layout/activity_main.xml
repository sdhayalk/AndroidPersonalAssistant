<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e8e8e8">

        <TextView
            android:id="@+id/topAppNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:textSize="10dp"
            android:text="Sign Out"/>

    </RelativeLayout>


    <Button
        android:id="@+id/sendNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Notification" />

    <Button
        android:text="Weather Suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suggestWeatherButton" />

    <Button
        android:text="Restaurant  Suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suggestRestaurantButton" />

    <Button
        android:text="Offer Suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suggestOfferButton" />

    <Button
        android:text="User Preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/preferencesButton" />

    <TextView
        android:text="Weather  Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weatherDataTextView" />

</LinearLayout>